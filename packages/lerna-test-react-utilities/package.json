{
  "name": "@themallen/lerna-test-react-utilities",
  "version": "1.3.1",
  "description": "A set of utilities for React projects at Shopify.",
  "main": "lib/index.js",
  "license": "MIT",
  "author": "Shopify Inc.",
  "scripts": {
    "ts": "tsc --noEmit",
    "lint": "tslint -c ./config/tslint/full.json './src/**/*.{ts,tsx}' --exclude './node_modules/**/*.{ts,tsx}' --project tsconfig.json --type-check",
    "clean": "rimraf animation '*.{js,d.ts}'",
    "test": "yarn check",
    "prebuild": "yarn run clean",
    "build": "tsc",
    "check": "npm-run-all lint ts",
    "prepublish": "in-publish && yarn run build || :"
  },
  "dependencies": {
    "@shopify/javascript-utilities": "^1.1.0",
    "@types/classnames": "^0.0.32",
    "@types/node": "^7.0.12",
    "@types/react": "^15.0.21",
    "@types/react-addons-transition-group": "^0.14.19",
    "classnames": "^2.2.5",
    "core-js": "^2.4.1",
    "react-addons-transition-group": "^15.4.2"
  },
  "devDependencies": {
    "in-publish": "^2.0.0",
    "npm-run-all": "^4.0.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.6.1",
    "tslint": "4.5.1",
    "tslint-config-shopify": "^1.5.0",
    "typescript": "^2.2.2"
  },
  "keywords": [
    "react",
    "shopify"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/Shopify/react-utilities.git"
  },
  "homepage": "https://github.com/Shopify/react-utilities",
  "bugs": {
    "url": "https://github.com/Shopify/react-utilities/issues"
  }
